<script language="javascript">

	function checkID(id)
	{
		var sum;
	    if(id.length != 13) return false;
	    for(i=0, sum=0; i < 12; i++)
	    sum += parseFloat(id.charAt(i))*(13-i); if((11-sum%11)%10!=parseFloat(id.charAt(12)))
	    return false; return true;
	}

